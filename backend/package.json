{
  "name": "procure-flow-backend",
  "version": "1.0.0",
  "description": "Backend API for Procurement Flow Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed:db": "tsx src/scripts/seedDatabase.ts",
    "seed:users": "tsx src/scripts/createTestUsers.ts",
    "migrate": "tsx src/scripts/migrate.ts",
    "db:reset": "npm run seed:db reset",
    "db:clear": "npm run seed:db clear",
    "db:migrate": "npm run migrate up",
    "db:rollback": "npm run migrate down",
    "db:status": "npm run migrate status"
  },
  "keywords": [
    "procurement",
    "api",
    "nodejs",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
